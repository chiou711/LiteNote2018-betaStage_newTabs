<!-- whole start -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/row_whole"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    card_view:cardCornerRadius="10dp"
                                    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- controls start -->
        <LinearLayout
            android:id="@+id/row_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <!-- ID -->
            <TextView
                android:id="@+id/row_id"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textSize="14sp"
                android:textStyle="italic"/>

            <!-- check box-->
            <ImageView
                android:id="@+id/img_check"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="img_check"/>

            <!-- dragger -->
            <ImageView
                android:id="@+id/img_dragger"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="@string/drag_handler"
                android:src="@drawable/ic_dragger_on"/>

            <!-- audio block start -->
            <LinearLayout
                android:id="@+id/audio_block"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_gray_border"
                android:orientation="horizontal">
                <!-- audio icon -->
                <ImageView
                    android:id="@+id/img_audio"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:adjustViewBounds="false"
                    android:contentDescription="img_audio"/>
                <!-- audio name -->
                <TextView
                    android:id="@+id/row_audio_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:maxLines="3"
                    android:minHeight="25dp"
                    android:textStyle="italic|bold"
                    android:textSize="12sp"/>
            </LinearLayout>
            <!-- audio block end -->
        </LinearLayout>
        <!-- controls end -->

        <!-- thumb nail start -->
        <FrameLayout
            android:id="@+id/row_thumb_nail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/row_controls"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="3dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/thumb_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="img_thumb_picture"
                android:scaleType="fitCenter"/>

            <ImageView
                android:id="@+id/thumb_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="img_thumb_audio"
                android:scaleType="fitCenter"/>

            <com.cw.litenote.util.CustomWebView
                android:id="@+id/thumb_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="img_thumb_web"
                android:scaleType="fitCenter"/>

            <ProgressBar
                android:id="@+id/thumb_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>
        <!-- thumb nail end -->

        <!-- main start -->
        <LinearLayout
            android:id="@+id/row_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/row_thumb_nail"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/row_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:orientation="vertical">
                <!-- title start -->
                <TextView
                    android:id="@+id/row_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/note_text"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:minHeight="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />
                <!-- title end -->

                <!-- line -->
                <!--<View-->
                <!--android:id="@+id/row_divider"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dip"-->
                <!--android:layout_margin="1dp"-->
                <!--android:background="#777777" />-->

                <!-- body start -->
                <LinearLayout
                    android:id="@+id/row_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/row_body_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:maxLines="2"
                        android:minHeight="25dp"
                        android:paddingEnd="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingStart="5dp"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/row_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:maxLines="1"
                        android:minHeight="12dp"
                        android:paddingLeft="12sp"
                        android:paddingRight="12sp"
                        android:textSize="12sp"/>
                </LinearLayout>
                <!-- body end -->

            </LinearLayout>
            <!-- text -->

        </LinearLayout>
        <!-- main end -->
    </RelativeLayout>

</android.support.v7.widget.CardView>
<!-- whole end -->